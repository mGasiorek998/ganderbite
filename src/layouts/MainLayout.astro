---
import { Footer } from '@/lib/ui';
import AppHead from '@/layouts/AppHead.astro';

type Props = {
  title: string;
};

const { title } = Astro.props;
---

<html lang="en">
  <AppHead title={title} />
  <body class="relative min-h-svh w-svw bg-neutral-900" style="height: calc(100% + 100vh)">
    <header slot="header" class="relative z-10 bg-neutral-900 px-2.5 md:px-3.5 lg:px-8">
      <slot name="header" />
    </header>
    <main class="relative z-10 bg-neutral-900 px-2.5 text-neutral-50 md:px-3.5 lg:px-8">
      <slot />
    </main>
    <Footer />
  </body>
</html>
